{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "target": "esnext",
  "module": "commonjs",
  "types": ["react-native", "node", "jest"],
  "lib": [
    "es2019",
    "es2020.bigint",
    "es2020.promise",
    "es2020.string",
    "es2020.symbol.wellknown",
    "es2021.promise",
    "es2021.string",
    "es2021.weakref",
  ],
  "allowJs": true,
  "jsx": "react-native",
  "noEmit": true,
  "isolatedModules": true,
  "strict": false,
  "moduleResolution": "node",
  "allowSyntheticDefaultImports": true,
  "esModuleInterop": true,
  "resolveJsonModule": true,
  "skipLibCheck": true,
  "baseUrl": "./",
  "rootDirs": [
    "./src"
  ],
  "compilerOptions": {
    "types": [
      "react-native"
    ],
    "allowImportingTsExtensions": false,
    "baseUrl": "./",
    "rootDirs": [
      "./src"
    ],
    "paths": {
      "@navigations/*": ["./src/navigations/*"],
    }
  },
  "include": [
    "src",
    "__tests__",
    "__mocks__",
    "__helpers__",
    "*.js",
    ".*.js",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
